{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://yourportfolio.com/schemas/mdx-frontmatter.json",
  "title": "MDX Frontmatter Schema",
  "description": "JSON Schema for blog post frontmatter validation in MDX files",
  "definitions": {
    "blogPostFrontmatter": {
      "type": "object",
      "required": ["title", "description", "publishedAt", "category", "tags"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 10,
          "maxLength": 100,
          "description": "Blog post title (10-100 characters for SEO optimization)",
          "examples": [
            "Building a Marathon Training Plan with Data-Driven Insights",
            "React Server Components: A Complete Guide",
            "How I Qualified for the Boston Marathon"
          ]
        },
        "description": {
          "type": "string",
          "minLength": 50,
          "maxLength": 200,
          "description": "Blog post meta description (50-200 characters for SEO)",
          "examples": [
            "How I applied software engineering principles to design a 16-week marathon training plan using heart rate data and progressive overload."
          ]
        },
        "publishedAt": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Publication date in YYYY-MM-DD format (ISO 8601)",
          "examples": ["2025-09-15", "2024-12-01"]
        },
        "updatedAt": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Last updated date in YYYY-MM-DD format (optional)",
          "examples": ["2025-10-01"]
        },
        "category": {
          "type": "string",
          "enum": ["technical", "fitness", "lifestyle"],
          "description": "Primary category for content organization",
          "examples": ["technical", "fitness"]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 2,
            "maxLength": 30
          },
          "minItems": 1,
          "maxItems": 10,
          "uniqueItems": true,
          "description": "Content tags for filtering and search (1-10 tags)",
          "examples": [
            ["react", "typescript", "next.js", "performance"],
            ["marathon", "training", "running", "fitness"]
          ]
        },
        "image": {
          "type": "string",
          "pattern": "^[a-z0-9-]+\\.(jpg|jpeg|png|webp)$",
          "description": "Featured image filename (must exist in /public/images/blog/)",
          "examples": ["marathon-training.jpg", "react-hooks.png"]
        },
        "featured": {
          "type": "boolean",
          "default": false,
          "description": "Whether to feature this post on the home page",
          "examples": [true, false]
        },
        "author": {
          "type": "string",
          "minLength": 2,
          "maxLength": 100,
          "default": "Your Name",
          "description": "Post author name",
          "examples": ["Your Name", "Guest Author"]
        }
      },
      "additionalProperties": false
    },
    "projectData": {
      "type": "object",
      "required": [
        "id",
        "title",
        "description",
        "technologies",
        "category",
        "status",
        "image"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "minLength": 3,
          "maxLength": 100,
          "description": "URL-safe project identifier (slug)",
          "examples": ["ecommerce-platform-redesign", "fitness-tracker-app"]
        },
        "title": {
          "type": "string",
          "minLength": 10,
          "maxLength": 80,
          "description": "Project title",
          "examples": [
            "E-commerce Platform Redesign",
            "Real-time Fitness Tracker"
          ]
        },
        "description": {
          "type": "string",
          "minLength": 50,
          "maxLength": 200,
          "description": "Short project description for card preview",
          "examples": [
            "Led full-stack redesign of e-commerce platform, improving checkout conversion by 32% and reducing page load time by 58%."
          ]
        },
        "longDescription": {
          "type": "string",
          "minLength": 100,
          "description": "Detailed project description for project detail page",
          "examples": [
            "Comprehensive overhaul of legacy e-commerce platform serving 50k+ monthly users. Migrated from monolithic PHP application to Next.js + Node.js microservices architecture."
          ]
        },
        "technologies": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 2,
            "maxLength": 30
          },
          "minItems": 1,
          "maxItems": 15,
          "uniqueItems": true,
          "description": "Technologies used in the project",
          "examples": [
            [
              "Next.js",
              "React",
              "TypeScript",
              "Node.js",
              "PostgreSQL",
              "Docker"
            ]
          ]
        },
        "category": {
          "type": "string",
          "enum": ["web", "mobile", "backend", "fullstack", "other"],
          "description": "Project category",
          "examples": ["fullstack", "web", "mobile"]
        },
        "status": {
          "type": "string",
          "enum": ["completed", "in-progress", "archived"],
          "description": "Current project status",
          "examples": ["completed", "in-progress"]
        },
        "image": {
          "type": "string",
          "pattern": "^[a-z0-9-]+\\.(jpg|jpeg|png|webp)$",
          "description": "Project thumbnail image (must exist in /public/images/projects/)",
          "examples": ["ecommerce-platform.jpg", "fitness-tracker.png"]
        },
        "demoUrl": {
          "type": "string",
          "format": "uri",
          "description": "Live demo URL (optional)",
          "examples": ["https://demo.example.com"]
        },
        "githubUrl": {
          "type": "string",
          "format": "uri",
          "pattern": "^https://github\\.com/[a-zA-Z0-9-]+/[a-zA-Z0-9-]+$",
          "description": "GitHub repository URL (optional)",
          "examples": ["https://github.com/username/project-name"]
        },
        "featured": {
          "type": "boolean",
          "default": false,
          "description": "Whether to feature this project on the home page",
          "examples": [true, false]
        },
        "startDate": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}$",
          "description": "Project start date in YYYY-MM format",
          "examples": ["2024-01", "2023-06"]
        },
        "endDate": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}$",
          "description": "Project end date in YYYY-MM format (optional for in-progress projects)",
          "examples": ["2024-09", "2024-12"]
        },
        "problemStatement": {
          "type": "string",
          "minLength": 50,
          "description": "Problem statement for project detail page",
          "examples": [
            "Legacy platform suffered from slow page loads (5s+), 68% cart abandonment, and difficult-to-maintain PHP codebase."
          ]
        },
        "technicalApproach": {
          "type": "string",
          "minLength": 50,
          "description": "Technical approach and architecture for project detail page",
          "examples": [
            "Migrated to Next.js for frontend with static generation, Node.js microservices for API, PostgreSQL for data persistence."
          ]
        },
        "challenges": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 20
          },
          "minItems": 1,
          "maxItems": 10,
          "description": "Challenges overcome during the project",
          "examples": [
            [
              "Zero-downtime migration of 50k active users",
              "Data migration from MySQL to PostgreSQL",
              "Maintaining SEO rankings during platform transition"
            ]
          ]
        },
        "outcomes": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 20
          },
          "minItems": 1,
          "maxItems": 10,
          "description": "Measurable outcomes and results",
          "examples": [
            [
              "Page load time reduced from 5.2s to 2.1s (58% improvement)",
              "Checkout conversion increased from 23% to 32%",
              "Mobile performance score improved from 45 to 92 (Lighthouse)"
            ]
          ]
        },
        "metrics": {
          "type": "object",
          "description": "Key metrics for the project",
          "properties": {
            "usersImpacted": {
              "type": "integer",
              "minimum": 1,
              "description": "Number of users impacted by the project",
              "examples": [50000, 10000]
            },
            "performanceImprovement": {
              "type": "string",
              "description": "Performance improvement metric",
              "examples": ["58% faster page loads", "2x faster build times"]
            },
            "codeReduction": {
              "type": "string",
              "description": "Code reduction metric",
              "examples": ["40% less code", "Reduced bundle size by 120KB"]
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    }
  },
  "oneOf": [
    {
      "title": "Blog Post Frontmatter",
      "description": "Frontmatter schema for blog post MDX files",
      "$ref": "#/definitions/blogPostFrontmatter"
    },
    {
      "title": "Project Data",
      "description": "Schema for project JSON data files",
      "$ref": "#/definitions/projectData"
    }
  ]
}
