<svg xmlns="http://www.w3.org/2000/svg" width="1200" height="675" viewBox="0 0 1200 675">
  <defs>
    <linearGradient id="grad3" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#7c3aed;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#a855f7;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect width="1200" height="675" fill="url(#grad3)"/>

  <!-- Grid pattern -->
  <g opacity="0.1" stroke="#fff" stroke-width="2">
    <line x1="0" y1="150" x2="1200" y2="150"/>
    <line x1="0" y1="300" x2="1200" y2="300"/>
    <line x1="0" y1="450" x2="1200" y2="450"/>
    <line x1="0" y1="600" x2="1200" y2="600"/>
    <line x1="300" y1="0" x2="300" y2="675"/>
    <line x1="600" y1="0" x2="600" y2="675"/>
    <line x1="900" y1="0" x2="900" y2="675"/>
  </g>

  <!-- Architecture diagram -->
  <g transform="translate(400, 200)">
    <!-- Git Repository -->
    <rect x="0" y="0" width="140" height="80" fill="#1e293b" rx="8" opacity="0.95"/>
    <text x="70" y="45" font-family="sans-serif" font-size="18" font-weight="bold" fill="#fff" text-anchor="middle">Git Repo</text>

    <!-- Arrow -->
    <path d="M 70 90 L 70 130" stroke="#fff" stroke-width="3" marker-end="url(#arrowhead)"/>

    <!-- Build Process -->
    <rect x="0" y="140" width="140" height="80" fill="#1e293b" rx="8" opacity="0.95"/>
    <text x="70" y="185" font-family="sans-serif" font-size="18" font-weight="bold" fill="#22c55e" text-anchor="middle">Build</text>

    <!-- Arrow -->
    <path d="M 70 230 L 70 270" stroke="#fff" stroke-width="3" marker-end="url(#arrowhead)"/>

    <!-- Static Files -->
    <rect x="0" y="280" width="140" height="80" fill="#1e293b" rx="8" opacity="0.95"/>
    <text x="70" y="325" font-family="sans-serif" font-size="18" font-weight="bold" fill="#fbbf24" text-anchor="middle">Static</text>

    <!-- CDN -->
    <rect x="260" y="210" width="140" height="80" fill="#1e293b" rx="8" opacity="0.95"/>
    <text x="330" y="255" font-family="sans-serif" font-size="18" font-weight="bold" fill="#60a5fa" text-anchor="middle">CDN</text>

    <!-- Arrow from Static to CDN -->
    <path d="M 145 320 L 255 250" stroke="#fff" stroke-width="3" marker-end="url(#arrowhead)"/>

    <!-- Database crossed out -->
    <g transform="translate(260, 0)">
      <rect x="0" y="0" width="140" height="80" fill="#1e293b" rx="8" opacity="0.95" stroke="#ef4444" stroke-width="4"/>
      <text x="70" y="45" font-family="sans-serif" font-size="18" font-weight="bold" fill="#94a3b8" text-anchor="middle" text-decoration="line-through">Database</text>
      <line x1="10" y1="10" x2="130" y2="70" stroke="#ef4444" stroke-width="4"/>
      <line x1="130" y1="10" x2="10" y2="70" stroke="#ef4444" stroke-width="4"/>
    </g>
  </g>

  <!-- Arrow marker definition -->
  <defs>
    <marker id="arrowhead" markerWidth="10" markerHeight="10" refX="5" refY="5" orient="auto">
      <polygon points="0 0, 10 5, 0 10" fill="#fff"/>
    </marker>
  </defs>

  <!-- Title -->
  <text x="600" y="580" font-family="sans-serif" font-size="36" font-weight="bold" fill="#fff" text-anchor="middle">
    Zero-Database Architecture
  </text>
  <text x="600" y="620" font-family="sans-serif" font-size="24" fill="#fff" text-anchor="middle" opacity="0.9">
    Static Site Generation with Next.js
  </text>
</svg>
