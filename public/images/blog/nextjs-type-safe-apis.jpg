<svg xmlns="http://www.w3.org/2000/svg" width="1200" height="675" viewBox="0 0 1200 675">
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#6366f1;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#8b5cf6;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect width="1200" height="675" fill="url(#grad1)"/>

  <!-- Pattern -->
  <g opacity="0.1">
    <circle cx="100" cy="100" r="50" fill="#fff"/>
    <circle cx="300" cy="200" r="30" fill="#fff"/>
    <circle cx="1100" cy="150" r="40" fill="#fff"/>
    <circle cx="900" cy="500" r="60" fill="#fff"/>
    <circle cx="200" cy="550" r="35" fill="#fff"/>
  </g>

  <!-- Code brackets icon -->
  <g transform="translate(450, 237.5)">
    <rect x="0" y="0" width="300" height="200" fill="#1e293b" rx="10" opacity="0.9"/>

    <!-- Code symbols -->
    <text x="40" y="80" font-family="monospace" font-size="60" fill="#60a5fa">&lt;</text>
    <text x="100" y="80" font-family="monospace" font-size="60" fill="#a78bfa">/</text>
    <text x="150" y="80" font-family="monospace" font-size="60" fill="#60a5fa">&gt;</text>

    <!-- Decorative lines -->
    <line x1="40" y1="110" x2="260" y2="110" stroke="#64748b" stroke-width="3"/>
    <line x1="40" y1="130" x2="200" y2="130" stroke="#64748b" stroke-width="3"/>
    <line x1="40" y1="150" x2="230" y2="150" stroke="#64748b" stroke-width="3"/>
  </g>

  <!-- Title -->
  <text x="600" y="600" font-family="sans-serif" font-size="36" font-weight="bold" fill="#fff" text-anchor="middle">
    Next.js + Zod Type Safety
  </text>
</svg>
